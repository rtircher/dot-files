#!/usr/local/bin/zsh
# -*- coding: utf-8 -*-

local RED="%{\e[31m%}"
local GREY="%{\e[90m%}"
local BLUE="%{\e[34m%}"
local YELLOW="%{\e[33m%}"

local RESET="%{\e[0m%}"

local git_repo_path=$(git rev-parse --git-dir 2>/dev/null)

function in_git_repo() {
  [[ -n $git_repo_path ]]
}

function git_parse_branch() {
  local branch_name=$(cat $git_repo_path/HEAD | grep -Eo "refs/heads/(.*)" | cut -d/ -f3)
  if [[ -z $branch_name ]]; then
    print "${RED}no branch"
  else
    print $branch_name
  fi
}

function git_head_commit_id() {
  print $(git rev-parse --short HEAD 2>/dev/null)
}

function git_cwd_dirty() {
  if in_git_repo && [[ -n `git ls-files -m` ]]; then
    echo " ${GREY}âœ—${RESET}"
  fi
}

function rebasing_etc() {
  if [[ -e $git_repo_path/BISECT_LOG ]]; then
    print "+bisect"
  elif [[ -e $git_repo_path/MERGE_HEAD ]]; then
    print "+merge"
  elif [[ -e $git_repo_path/rebase
       || -e $git_repo_path/rebase-apply
       || -e $git_repo_path/rebase-merge
       || -e $git_repo_path/../.dotest ]]; then
    print "+rebase"
  fi
}

if in_git_repo; then
  print "${BLUE}$(git_parse_branch)${GREY}@${YELLOW}$(git_head_commit_id)%{\e[0m%}$(rebasing_etc)$(git_cwd_dirty)"
fi
