config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config checkDefaultsOnLoad true

# Resize Bindings
bind right:alt;cmd       resize +10% +0
bind left:alt;cmd        resize -10% +0
bind up:alt;cmd          resize +0   -10%
bind down:alt;cmd        resize +0   +10%
bind right:shift;alt;cmd  resize -10% +0 bottom-right
bind left:shift;alt;cmd   resize +10% +0 bottom-right
bind up:shift;alt;cmd     resize +0   +10% bottom-right
bind down:shift;alt;cmd   resize +0   -10% bottom-right

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/2
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/2
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Nudge Bindings
# bind right:cmd;alt nudge +10% +0
# bind left:cmd;alt  nudge -10% +0
# bind up:cmd;alt    nudge +0   -10%
# bind down:cmd;alt  nudge +0   +10%

# Throw Bindings
bind 1:ctrl;cmd         throw 0 resize

