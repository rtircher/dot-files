ControlMaster auto
ControlPath /tmp/ssh_mux_%h_%p_%r
ControlPersist 30m
IdentityFile ~/.ssh/id_rsa
IdentityFile ~/.ssh/github-key
IdentityFile ~/.ssh/clojar-ssh
User rtircher
UseKeychain yes
AddKeysToAgent yes
ServerAliveInterval 5

ForwardAgent yes

